{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      "**",
      "!**/*.gen.ts",
      "!**/generated/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/.next/**"
    ]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "identifierOrder": "natural",
            "groups": [
              ["react", "react/**"],
              ["react-dom", "react-dom/**"],
              ["react-native", "react-native/**"],
              ["expo", "expo/**", "expo-*", "expo-*/**"],
              ["next", "next/**"],

              ":BLANK_LINE:",

              ["vitest", "vitest/**"],
              ["@testing-library", "@testing-library/**"],

              ":BLANK_LINE:",

              ":BLANK_LINE:",

              ":NODE:",

              ["@radix-ui/**"],

              ":PACKAGE:",

              ":BLANK_LINE:",

              "@/**",

              ":BLANK_LINE:",

              ["../../../**"],
              ["../../**"],
              ["../**"],
              ["./**"],

              ":BLANK_LINE:",

              ["**/*.css"]
            ]
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useAriaPropsForRole": "off",
        "useSemanticElements": "off",
        "useGenericFontNames": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noCommaOperator": "warn"
      },
      "correctness": {
        "noUnusedImports": "warn",
        "noUnknownFunction": "off"
      },
      "nursery": {
        "useSortedClasses": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noDelete": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noParameterAssign": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off",
        "noImplicitAnyLet": "warn",
        "noUnknownAtRules": "off"
      }
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "indentWidth": 2,
      "indentStyle": "space"
    },
    "linter": {
      "enabled": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "arrowParentheses": "always",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "es5"
    },
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  }
}
