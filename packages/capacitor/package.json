{
  "name": "@quiltt/capacitor",
  "version": "5.1.1",
  "description": "Capacitor plugin for Quiltt Connector",
  "keywords": [
    "quiltt",
    "quiltt-connector",
    "capacitor",
    "capacitor-plugin",
    "ionic",
    "typescript"
  ],
  "homepage": "https://github.com/quiltt/quiltt-js/tree/main/packages/capacitor#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/quiltt/quiltt-js.git",
    "directory": "packages/capacitor"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quiltt/quiltt-js/issues"
  },
  "author": "Quiltt <support@quiltt.io>",
  "sideEffects": [],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "require": "./dist/react.cjs",
      "import": "./dist/react.js"
    },
    "./vue": {
      "types": "./dist/vue.d.ts",
      "require": "./dist/vue.cjs",
      "import": "./dist/vue.js"
    }
  },
  "module": "./dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "android/proguard-rules.pro",
    "dist/**",
    "src/**",
    "ios/Sources",
    "QuilttConnector.podspec",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bunchee",
    "clean": "rimraf .turbo dist",
    "dev": "bunchee --watch",
    "lint": "TIMING=1 biome check src/ tests/ --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "xcodebuild build -scheme QuilttConnector -destination generic/platform=iOS",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.4.3",
    "@capacitor/android": "8.1.0",
    "@capacitor/core": "8.1.0",
    "@capacitor/ios": "8.1.0",
    "@quiltt/react": "workspace:*",
    "@quiltt/vue": "workspace:*",
    "@types/node": "24.10.13",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "bunchee": "6.9.4",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "rimraf": "6.1.3",
    "typescript": "5.9.3",
    "vue": "3.5.28"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.0.0 || ^7.0.0 || ^8.0.0",
    "@quiltt/react": "^5.0.0",
    "@quiltt/vue": "^5.0.0",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "@quiltt/react": {
      "optional": true
    },
    "@quiltt/vue": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
