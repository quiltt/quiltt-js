{
  "name": "@quiltt/vue",
  "version": "5.0.3",
  "description": "Vue 3 Composables and Components for Quiltt Connector",
  "keywords": [
    "quiltt",
    "quiltt-connector",
    "vue",
    "vue3",
    "typescript"
  ],
  "homepage": "https://github.com/quiltt/quiltt-js/tree/main/packages/vue#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/quiltt/quiltt-js.git",
    "directory": "packages/vue"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quiltt/quiltt-js/issues"
  },
  "sideEffects": [],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./composables": {
      "types": "./dist/composables/index.d.ts",
      "require": "./dist/composables/index.cjs",
      "import": "./dist/composables/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "require": "./dist/components/index.cjs",
      "import": "./dist/components/index.js"
    },
    "./plugin": {
      "types": "./dist/plugin/index.d.ts",
      "require": "./dist/plugin/index.cjs",
      "import": "./dist/plugin/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "src/**",
    "CHANGELOG.md"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "bunchee",
    "clean": "rimraf .turbo dist",
    "dev": "bunchee --watch",
    "lint": "TIMING=1 biome check src/ tests/ --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@quiltt/core": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.3",
    "@types/node": "24.10.13",
    "bunchee": "6.9.4",
    "rimraf": "6.1.3",
    "typescript": "5.9.3",
    "vue": "3.5.28"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "tags": [
    "quiltt",
    "vue"
  ],
  "publishConfig": {
    "access": "public"
  }
}
