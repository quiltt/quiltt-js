{
  "name": "@quiltt/react-native",
  "version": "3.6.2",
  "description": "React Native components for Quiltt Connector",
  "homepage": "https://github.com/quiltt/quiltt-js/tree/main/packages/react-native#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/quiltt/quiltt-js.git",
    "directory": "packages/react-native"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "require": {
      "import": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "src/**",
    "CHANGELOG.md"
  ],
  "scripts": {
    "addApiKey": "node scripts/addApiKey.js",
    "addVersion": "genversion --esm -f src/version.ts",
    "build": "pnpm run addApiKey && pnpm run addVersion && bunchee",
    "clean": "rimraf .turbo dist",
    "dev": "bunchee --watch",
    "lint": "TIMING=1 eslint --ext .js,.jsx,.ts,.tsx src/ --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@honeybadger-io/core": "6.6.0",
    "@quiltt/core": "workspace:*",
    "@quiltt/react": "workspace:*"
  },
  "devDependencies": {
    "@apollo/client": "3.9.9",
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "@types/base-64": "0.1.0",
    "@types/node": "20.12.2",
    "@types/react": "18.2.73",
    "@types/react-native": "0.72.5",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "bunchee": "4.4.8",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "prettier": "2.8.8",
    "react": "18.2.0",
    "rimraf": "5.0.5",
    "typescript": "5.4.3"
  },
  "peerDependencies": {
    "base-64": "*",
    "react": "^18.2.0",
    "react-native": "^0.72.5",
    "react-native-url-polyfill": "*",
    "react-native-webview": "^13.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
