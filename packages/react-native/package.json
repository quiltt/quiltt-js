{
  "name": "@quiltt/react-native",
  "version": "3.8.0",
  "description": "React Native components for Quiltt Connector",
  "homepage": "https://github.com/quiltt/quiltt-js/tree/main/packages/react-native#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/quiltt/quiltt-js.git",
    "directory": "packages/react-native"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "import": {
      "default": "./dist/index.js"
    },
    "require": {
      "default": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "src/**",
    "CHANGELOG.md"
  ],
  "scripts": {
    "addApiKey": "node scripts/addApiKey.js",
    "addVersion": "genversion --esm -f src/version.ts",
    "build": "pnpm run addApiKey && pnpm run addVersion && bunchee",
    "clean": "rimraf .turbo dist",
    "dev": "bunchee --watch",
    "lint": "TIMING=1 biome check src/ tests/ --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@honeybadger-io/core": "6.6.0",
    "@quiltt/core": "workspace:*",
    "@quiltt/react": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/base-64": "1.0.2",
    "@types/node": "22.9.0",
    "@types/react": "18.3.12",
    "base-64": "1.0.0",
    "bunchee": "5.3.2",
    "react": "18.3.1",
    "react-native": "0.76.1",
    "react-native-url-polyfill": "2.0.0",
    "react-native-webview": "13.12.3",
    "rimraf": "6.0.1",
    "typescript": "5.6.3"
  },
  "peerDependencies": {
    "base-64": "^1.0.0",
    "react": ">=18.2.0",
    "react-native": ">=0.72.0",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-webview": ">=13.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
