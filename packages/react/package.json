{
  "name": "@quiltt/react",
  "version": "3.7.1",
  "description": "React components and hooks for Quiltt Connector",
  "keywords": [
    "quiltt",
    "quiltt-connector",
    "react",
    "typescript"
  ],
  "homepage": "https://github.com/quiltt/quiltt-js/tree/main/packages/react#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/quiltt/quiltt-js.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "sideEffects": [
    "./src/hooks/useQuilttConnector.ts",
    "./src/hooks/useQuilttSettings.ts",
    "./src/hooks/useSession.ts",
    "./src/hooks/useStorage.ts"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "src/**",
    "CHANGELOG.md"
  ],
  "scripts": {
    "addVersion": "genversion --esm -f src/version.ts",
    "build": "pnpm run addVersion && bunchee",
    "clean": "rimraf .turbo dist",
    "dev": "bunchee --watch",
    "lint": "TIMING=1 biome check src/ --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@quiltt/core": "workspace:*"
  },
  "devDependencies": {
    "@apollo/client": "3.9.9",
    "@biomejs/biome": "1.9.4",
    "@types/node": "22.10.2",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.2.6",
    "bunchee": "6.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "6.0.1",
    "typescript": "5.5.3"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
