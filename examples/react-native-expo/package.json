{
  "name": "@quiltt/examples-react-native-expo",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "prebuild": "CI=1 expo prebuild",
    "prebuild:clean": "CI=1 expo prebuild --clean",
    "build": "pnpm run prebuild",
    "build:clean": "pnpm run prebuild:clean",
    "start": "expo start",
    "dev": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test:ios:build": "detox build --configuration ios.sim.debug",
    "test:ios:run": "detox test -c ios.sim.debug",
    "test:ios:run:ci": "detox test --configuration ios.sim.debug --cleanup --headless --record-logs all",
    "test:ios": "pnpm run build && pnpm run test:ios:build && pnpm run test:ios:run",
    "test:android:build": "detox build --configuration android.emulator.debug",
    "test:android:run": "detox test -c android.emulator.debug",
    "test:android:run:ci": "detox test --configuration android.emulator.debug --cleanup --headless --record-logs all",
    "test:android": "pnpm run build && pnpm run test:android:build && pnpm run test:android:run",
    "test:e2e": "pnpm run build && (pnpm run test:ios:build & pnpm run test:android:build & wait) && (pnpm run test:ios:run & pnpm run test:android:run & wait)",
    "test": "node scripts/test.js",
    "lint": "TIMING=1 biome check src/ e2e/ scripts/ plugins/ --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@babel/core": "^7.26.10",
    "@babel/runtime": "^7.27.0",
    "@config-plugins/detox": "^9.0.0",
    "@expo/metro-runtime": "~6.1.2",
    "@expo/vector-icons": "^15.0.3",
    "@quiltt/react-native": "workspace:*",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/elements": "^2.2.5",
    "@react-navigation/native": "^7.0.14",
    "expo": "~54.0.27",
    "expo-blur": "~15.0.8",
    "expo-constants": "~18.0.11",
    "expo-font": "~14.0.10",
    "expo-haptics": "~15.0.8",
    "expo-linking": "~8.0.10",
    "expo-router": "~6.0.18",
    "expo-splash-screen": "~31.0.12",
    "expo-status-bar": "~3.0.9",
    "expo-symbols": "~1.0.8",
    "expo-system-ui": "~6.0.9",
    "expo-web-browser": "~15.0.10",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/jest": "^29.5.14",
    "@types/node": "22.19.5",
    "@types/react": "19.2.8",
    "detox": "20.46.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "5.9.3"
  },
  "private": true
}
