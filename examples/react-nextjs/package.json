{
  "name": "@quiltt/examples-nextjs",
  "version": "1.0.0",
  "private": true,
  "description": "Quiltt's React SDK integrated into Next.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "TIMING=1 biome check app/ e2e/ playwright/ --fix",
    "playwright:install": "playwright install --with-deps chromium",
    "start": "next start",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:component": "playwright test --project=component-chromium",
    "test:e2e": "playwright test --project=e2e-chromium",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@quiltt/react": "workspace:*",
    "next": "16.1.5",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@playwright/experimental-ct-react": "1.57.0",
    "@playwright/test": "1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "24.10.9",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "encoding": "0.1.13",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
