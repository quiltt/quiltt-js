{
  "name": "@quiltt/quiltt-public",
  "version": "1.0.0",
  "description": "Quiltt's Open Source Projects",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "prebuild": "[[ $CI = true ]] && npx pnpm@8 install --store=node_modules/.pnpm-store || echo skiping pnpm install; turbo run prebuild",
    "build": "turbo run build",
    "changeset": "npx changeset",
    "clean": "turbo run clean",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "publish": "pnpm run build && pnpm -r publish packages --no-git-checks --filter=./ECMAScript/**",
    "cypress": "turbo run cypress",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "version": "npx changeset version && pnpm run sync_flutter",
    "postversion": "pnpm recursive exec --if-present --filter ./packages 'pnpm install'",
    "sync_flutter": "node sync_flutter.js"
  },
  "devDependencies": {
    "@changesets/cli": "2.26.2",
    "@types/node": "18.18.7",
    "pnpm": "8.10.0",
    "turbo": "1.10.16"
  },
  "packageManager": "pnpm@8.6.5"
}
