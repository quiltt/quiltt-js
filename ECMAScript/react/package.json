{
  "name": "@quiltt/react",
  "version": "3.4.0",
  "description": "React components and hooks for Quiltt Connector",
  "repository": {
    "type": "git",
    "url": "https://github.com/quiltt/quiltt-public.git",
    "directory": "ECMAScript/react"
  },
  "homepage": "https://github.com/quiltt/quiltt-public/tree/main/ECMAScript/react#readme",
  "keywords": [
    "quiltt",
    "quiltt-connector",
    "react",
    "typescript"
  ],
  "license": "MIT",
  "sideEffects": [
    "./src/hooks/useQuilttConnector.ts",
    "./src/hooks/useQuilttSettings.ts",
    "./src/hooks/useSession.ts",
    "./src/hooks/useStorage.ts"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "src/**",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "pnpm run addVersion && tsup",
    "clean": "rimraf .turbo dist",
    "dev": "tsup --watch",
    "addVersion": "genversion --esm -f src/version.ts",
    "lint": "TIMING=1 eslint --ext .js,.jsx,.ts,.tsx src/ --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@quiltt/core": "workspace:*"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@apollo/client": "3.7.16",
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "@types/node": "20.11.4",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.6",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "prettier": "2.8.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tsup": "6.7.0",
    "typescript": "5.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
