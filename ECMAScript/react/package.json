{
  "name": "@quiltt/react",
  "version": "1.0.30",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.cjs",
      "types": "./dist/hooks/index.d.ts"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/quiltt/quiltt-public.git",
    "directory": "ECMAScript/hooks"
  },
  "publishConfig": {
    "access": "public",
    "@quiltt:registry": "https://npm.pkg.github.com"
  },
  "sideEffects": [
    "./src/hooks/useQuilttSettings.ts",
    "./src/hooks/useSession.ts",
    "./src/hooks/useStorage.ts"
  ],
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rimraf .turbo dist",
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "TIMING=1 eslint --ext .js,.jsx,.ts,.tsx src/ --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@quiltt/core": "workspace:*"
  },
  "devDependencies": {
    "@apollo/client": "3.7.12",
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "@types/node": "18.15.11",
    "@types/react": "18.0.35",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "8.38.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "graphql": "16.6.0",
    "prettier": "2.8.7",
    "tsup": "6.7.0",
    "typescript": "5.0.4"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  }
}
