{
  "name": "@quiltt/core",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/quiltt/quiltt-public.git",
    "directory": "ECMAScript/core"
  },
  "publishConfig": {
    "access": "public",
    "@quiltt:registry": "https://npm.pkg.github.com"
  },
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rimraf .turbo dist",
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "TIMING=1 eslint src --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@types/react": "^18.0.34",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  }
}
