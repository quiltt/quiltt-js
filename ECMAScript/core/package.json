{
  "name": "@quiltt/core",
  "version": "1.2.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/quiltt/quiltt-public.git",
    "directory": "ECMAScript/core"
  },
  "publishConfig": {
    "access": "public",
    "@quiltt:registry": "https://npm.pkg.github.com"
  },
  "sideEffects": [
    "./src/Storage/Local.ts",
    "./src/api/graphql/links/SubscriptionLink.ts"
  ],
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rimraf .turbo dist",
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "TIMING=1 eslint --ext .js,.jsx,.ts,.tsx src/ --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@apollo/client": "3.7.15",
    "axios": "1.4.0",
    "cross-fetch": "3.1.6",
    "graphql": "16.6.0",
    "graphql-ruby-client": "1.11.8"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "@types/node": "18.16.14",
    "@types/react": "18.2.7",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.8.8",
    "tsup": "6.7.0",
    "typescript": "5.0.4"
  }
}
